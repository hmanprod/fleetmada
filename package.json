{
  "name": "fleetmada-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true npm run build",
    "test:build": "npm run type-check && npm run build",
    "test:build:prod": "NODE_ENV=production npm run type-check && npm run build",
    "type-check": "tsc --noEmit",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed:setup": "tsx prisma/seed-setup.ts",
    "db:seed:dev": "tsx prisma/seed-dev.ts",
    "db:seed": "npm run db:seed:setup && npm run db:seed:dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f postgres",
    "test:infra": "node scripts/test-infrastructure.js",
    "test:e2e": "playwright test",
    "test:e2e:list": "playwright test --reporter=list",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "playwright:install": "npx playwright install",
    "setup": "npm install && npm run docker:up && cp .env.example .env.local && npm run db:generate && npm run db:migrate",
    "qa:audit": "node --import tsx scripts/qa/audit.ts",
    "qa:playwright:list": "playwright test -c qa/playwright.qa.config.ts --list"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.344.0",
    "next": "14.1.0",
    "node-fetch": "^3.3.2",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^2.12.0",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.0.1",
    "dotenv-cli": "^11.0.0",
    "postcss": "^8",
    "prisma": "^5.0.0",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.0.0",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed-setup.ts"
  }
}
